  "discovery": {
    "yamaha-receiver-discovery": {
      "type": "ssdp",
      "ssdp": {
        "search": "urn:schemas-upnp-org:device:MediaRenderer:1"
      },
      "id": "{{headers.usn}}",
      "conditions": [
        [
          {
            "field": "headers.st",
            "match": {
              "type": "string",
              "value": "urn:schemas-upnp-org:device:MediaRenderer:1"
            }
          }
        ]
      ]
    }
  },

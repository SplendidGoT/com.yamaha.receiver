  "flow": {
    "triggers": [
      {
        "id": "input_changed",
        "title": {
          "en": "Input was changed",
          "nl": "Input is gewijzigd",
          "de": "Eingabe wurde geändert"
        },
        "tokens": [
          {
            "name": "input",
            "type": "string",
            "title": {
              "en": "Selected input",
              "nl": "Geselecteerde input",
              "de": "Ausgewählter Eingang"
            },
            "example": "HDMI1"
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select receiver",
              "nl": "Selecteer versterker",
              "de": "Verstärker auswählen"
            }
          }
        ]
      },
      {
        "id": "surround_program_changed",
        "title": {
          "en": "Surround program was changed",
          "nl": "Surround-programma is gewijzigd",
          "de": "Surround-Programm wurde geändert"
        },
        "tokens": [
          {
            "name": "surround_program",
            "type": "string",
            "title": {
              "en": "Selected surround program",
              "nl": "Geselecteerde surround-programma",
              "de": "Ausgewähltes Surround-Programm"
            },
            "example": "5ch Stereo"
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select receiver",
              "nl": "Selecteer versterker",
              "de": "Verstärker auswählen"
            },
            "filter": "driver_id=receiver"
          }
        ]
      },
      {
        "id": "muted",
        "title": {
          "en": "Amplifier was muted",
          "nl": "Versterker is gedempt",
          "de": "Verstärker wurde stummgeschaltet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select receiver",
              "nl": "Selecteer versterker",
              "de": "Verstärker auswählen"
            },
            "filter": "driver_id=receiver"
          }
        ]
      },
      {
        "id": "unmuted",
        "title": {
          "en": "Amplifier was unmuted",
          "nl": "Versterker is ongedempt",
          "de": "Verstärker ist ungedämpft"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select receiver",
              "nl": "Selecteer versterker",
              "de": "Verstärker auswählen"
            },
            "filter": "driver_id=receiver"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "change_input",
        "title": {
          "en": "Change input",
          "nl": "Wijzig bron",
          "de": "Quelle ändern"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select receiver",
              "nl": "Selecteer versterker",
              "de": "Verstärker auswählen"
            }
          },
          {
            "name": "input",
            "type": "autocomplete",
            "placeholder": {
              "en": "Input",
              "nl": "Input",
              "de": "Eingang"
            }
          }
        ]
      },
      {
        "id": "change_surround_program",
        "title": {
          "en": "Change surround program",
          "nl": "Wijzig surround-programma",
          "de": "Ändern Sie das Surround-Programm"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select receiver",
              "nl": "Selecteer versterker",
              "de": "Verstärker auswählen"
            },
            "filter": "driver_id=receiver"
          },
          {
            "name": "surround_program",
            "type": "autocomplete",
            "placeholder": {
              "en": "Surround program",
              "nl": "Surround-programma",
              "de": "Surround-Programm"
            }
          }
        ]
      },
      {
        "id": "change_line_input",
        "title": {
          "en": "Select line input",
          "nl": "Selecteer regelnummer",
          "de": "Zeilennummer auswählen"
        },
        "hint": {
          "en": "Select a specific line within a menu (only for menu based inputs like Net Radio, Server, USB).",
          "nl": "Selecteer een specifieke regelnummer binnen een menu (alleen voor menu gebaseerde inputs zoals Net Radio, Server, USB).",
          "de": "Wählen Sie eine bestimmte Zeilennummer innerhalb eines Menüs (nur für menübasierte Eingänge wie Net Radio, Server, USB)."
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select receiver",
              "nl": "Selecteer versterker",
              "de": "Verstärker auswählen"
            },
            "filter": "driver_id=receiver"
          },
          {
            "name": "input",
            "type": "dropdown",
            "values": [
              {
                "id": "NET_RADIO",
                "label": {
                  "en": "NET RADIO"
                }
              },
              {
                "id": "USB",
                "label": {
                  "en": "USB"
                }
              },
              {
                "id": "SERVER",
                "label": {
                  "en": "SERVER"
                }
              }
            ]
          },
          {
            "name": "line",
            "type": "number",
            "min": 1,
            "placeholder": {
              "en": "Line number",
              "nl": "Regelnummer",
              "de": "Zeilennummer"
            }
          }
        ]
      }
    ]
  }
